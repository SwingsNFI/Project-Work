<UserControl x:Class="OrHorApp.HotStoryListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrHorApp"
             xmlns:core="clr-namespace:OrHorApp.Core;assembly=OrHorApp.Core"
             mc:Ignorable="d" 
             d:DesignWidth="140">
    <Button d:DataContext="{x:Static core:GenreListItemDesignModel.Instance}"
            Style="{StaticResource HotStoryButton}"
            Content="{Binding GenreName, FallbackValue=NullGenre}" />
</UserControl>
